{{!-- Setup the `index.handlebars` to have the template that Handlebars can render onto. --}}

<div>Articles</div>
<a href="./articles"><button id="scrape" class="btn btn-primary btn-margin">Get Articles!</button></a>
<div>--------------------------------------------</div>
{{#each articles }}
	<h4>{{headline}}</h4>
	<div>{{summary}}</div>
	<div>
		<a href="{{url}}">{{url}}</a>
	</div>
	<div>
		<button data-id="{{_id}}" class='btn btn-primary btn-margin js-show-comments'>Comments</button>
		<button data-id="{{_id}}" class='btn btn-danger btn-margin js-delete'>Delete Article</button>
	</div>
	<div> --------------------------------</div>
{{/each}}
<div class="modal fade" id="comments" tabindex="-1" role="dialog" >
	<div class="modal-dialog">
		<div class="modal-content">
			<div>
				{{!-- Show all of the comments for the selected article --}}
				{{#each comments}}
				<div>
					<div>{{title}}</div>
					<div>{{body}}</div>
					<button>Delete Comment</div>
				</div>
				{{/each}}
				{{!-- Input box for new comments --}}
				<div class="">
					<input type="text" class="commentsInput" placeholder="Add Comment" id="comments-new">
				</div>
				<div>
					<button class="btn btn-success btn-margin js-save-comment" type="button">Save</button>
					<button class="btn btn-danger btn-margin js-close-modal" type="button">Close</button>
				</div>
				<div id="error-login"></div>
			</div>
		</div>
	</div>
</div> 